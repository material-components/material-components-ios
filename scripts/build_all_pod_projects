set -o errexit

readonly SCRIPTS_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
readonly BUILD_LOG=build_log.txt

readonly PODFILE_DIRS=$("$SCRIPTS_DIR"/release/manage_pods.py list)
for i in $PODFILE_DIRS; do
  echo "Building in $i..."
  pushd $i >/dev/null

  workspace=$(find . -d 1 -name '*.xcworkspace')
  scheme=$(xcodebuild build -workspace $workspace -list | grep "Information about workspace" | cut -d'"' -f2)
  
  if ! xcodebuild build -workspace $workspace -scheme $scheme >$BUILD_LOG 2>&1; then
    echo "Failed to build $scheme in $workspace, log left in $i/$BUILD_LOG."
    echo "Continuing with next project..."
  else
    rm $BUILD_LOG
    echo "Done."
  fi

  popd >/dev/null
done
