{
  "linters": {
    "clang-format": {
      "type": "clang-format",
      "include": "(\\.(m|h|mm)$)",
      "exclude": "(/Pods/)"
    },
    "text": {
      "type": "text",
      "include": "(\\.(m|h|mm|md|swift)$)",
      "exclude": "(/Pods/)",
      "severity": {
        "5": "disabled"
      },
      "text.max-line-length": 100
    },
    "chmod": {
      "type": "chmod",
      "exclude": "(/Pods/)"
    },
    "spelling": {
      "type": "spelling",
      "include": "(\\.(m|h|mm|md)$)",
      "exclude": "(/Pods/)"
    }
  }
}
